<%= form_for(@customer, remote: true, html: {'class':"admin-create-new-customers", 'id': "form-admin-create-new-customers"}) do |form| %>
<div class="field">
  <%= form.label :User, 'for' => "admin-create-customer" %>
  <%= form.text_field :name, 'placeholder' => "Write customer ...", 'class' => "admin-create-customer customer-third-class" %>
</div>
<div class="actions">
  <%= form.submit 'class' => "input-admin-create-customer-submit", 'type' => "submit", 'value' => "Add customer" %>
</div>
<% end %>
<p class="customer-input-text-error">Error, please enter again!</p>